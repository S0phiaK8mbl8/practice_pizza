<p id="notice"><%= notice %></p>

<h1>Our Pizzas</h1>
<div class="row">
<% @pizzas.each do |pizza| %>
  <div class="col-sm-8">
    <div class="thumbnail">
      <img src="http://i.imgur.com/TFKQLXN.jpg">
      <div class="caption">
        <h3><%= pizza.name %></h3>
        <h3>Cost: $<%= pizza.cost %></h3>
        <%= link_to "More Info", pizza, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>



<br>

<%= link_to 'New Pizza', new_pizza_path, class: "btn btn-primary" %>
